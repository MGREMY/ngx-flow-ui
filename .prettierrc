{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "bracketSameLine": true,
  "singleAttributePerLine": false,
  "printWidth": 120,
  "endOfLine": "lf",
  "insertPragma": true,
  "plugins": [
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": "*.html",
      "excludeFiles": "*inline-template-*.component.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.component.html",
      "options": {
        "bracketSameLine": true,
        "bracketSpacing": false
      }
    }
  ]
}
